{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ESNext",
		"moduleResolution": "node",
		"noEmit": true,
		"allowJs": true,
		"strict": false,
		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"baseUrl": "./",
		"paths": {
			"react": [
				"./node_modules/preact/compat/"
			],
			"react-dom": [
				"./node_modules/preact/compat/"
			]
		}
	},
	"include": [
		"src/**/*",
		"node_modules/vite/client.d.ts"
	]
}